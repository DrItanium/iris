Operation(SelectIfUnordered,                         GroupBranchReg | bits::IsSelectOperation | bits::BranchIfUnordered)
Operation(SelectIfGreater,                           GroupBranchReg | bits::IsSelectOperation | bits::BranchIfGreater)
